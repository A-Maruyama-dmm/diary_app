<h4>編集</h4>
<%= form_with model:@post, url:"/posts/#{@post.id}", local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :content %>
  <p><%= f.submit 'Update Book' %></p>
<% end %>
<%= link_to "show", post_path(@post) %>
<%= link_to "back", posts_path %>